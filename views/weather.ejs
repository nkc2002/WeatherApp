<%- include('partials/header') %>

<div class="container mx-auto px-4 py-8 min-h-screen">
  <!-- Back Button -->
  <div class="max-w-5xl mx-auto mb-6 fade-in">
    <a
      href="/"
      class="inline-flex items-center gap-2 text-white/90 hover:text-white font-medium transition-all hover:-translate-x-1 p-2 rounded-lg hover:bg-white/10"
    >
      <i class="fas fa-arrow-left"></i>
      Quay lại tìm kiếm
    </a>
  </div>

  <!-- Weather Card -->
  <div class="max-w-5xl mx-auto fade-in delay-100">
    <div class="glass rounded-[2.5rem] overflow-hidden shadow-2xl relative">
      <!-- Header Section -->
      <div class="p-8 md:p-12 text-white text-center relative z-10">
        <div
          class="inline-block px-6 py-2 rounded-full bg-white/20 backdrop-blur-md border border-white/20 mb-6 text-sm font-medium tracking-wider uppercase"
        >
          Thời tiết hiện tại
        </div>

        <h1
          class="text-4xl md:text-6xl font-bold mb-4 tracking-tight text-shadow"
        >
          <%= weather.name %><span class="text-2xl opacity-80 font-normal ml-2"
            ><%= weather.sys.country %></span
          >
        </h1>

        <p
          class="text-xl opacity-90 font-light flex items-center justify-center gap-2"
        >
          <i class="far fa-calendar-alt"></i>
          <%= new Date().toLocaleDateString('vi-VN', { weekday: 'long', year:
          'numeric', month: 'long', day: 'numeric' }) %>
        </p>

        <!-- Current Local Time -->
        <div class="mt-4 inline-flex items-center gap-3 px-6 py-3 rounded-2xl bg-white/10 backdrop-blur-md border border-white/20">
          <i class="fas fa-clock text-2xl text-cyan-300"></i>
          <div class="text-left">
            <p class="text-xs text-white/70 uppercase tracking-wider">Giờ địa phương</p>
            <%
              const now = new Date();
              const localTime = new Date((now.getTime() / 1000 + weather.timezone) * 1000);
              const localHours = String(localTime.getUTCHours()).padStart(2, '0');
              const localMinutes = String(localTime.getUTCMinutes()).padStart(2, '0');
              const localSeconds = String(localTime.getUTCSeconds()).padStart(2, '0');
            %>
            <p class="text-2xl font-bold text-white" id="localTime"><%= localHours %>:<%= localMinutes %>:<%= localSeconds %></p>
          </div>
        </div>
      </div>

      <!-- Main Weather Info -->
      <div class="px-8 pb-12 md:px-12">
        <!-- Hero Stats -->
        <div
          class="flex flex-col md:flex-row items-center justify-center gap-8 md:gap-16 mb-12"
        >
          <!-- Icon -->
          <div class="relative">
            <div
              class="absolute inset-0 bg-white/30 blur-2xl rounded-full"
            ></div>
            <img
              src="http://openweathermap.org/img/wn/<%= weather.weather[0].icon %>@4x.png"
              alt="<%= weather.weather[0].description %>"
              class="w-40 h-40 md:w-56 md:h-56 float-animation relative z-10 drop-shadow-2xl"
            />
          </div>

          <!-- Temp -->
          <div class="text-center md:text-left text-white">
            <div
              class="text-8xl md:text-9xl font-bold tracking-tighter text-shadow"
            >
              <%= Math.round(weather.main.temp) %>°
            </div>
            <div
              class="text-xl md:text-2xl font-medium opacity-90 capitalize mt-2 flex items-center justify-center md:justify-start gap-3"
            >
              <span><%= weather.weather[0].description %></span>
              <span class="w-1.5 h-1.5 rounded-full bg-white opacity-50"></span>
              <span>Cảm giác <%= Math.round(weather.main.feels_like) %>°</span>
            </div>
          </div>
        </div>

        <!-- Detail Grid -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
          <div
            class="bg-white/10 backdrop-blur-md rounded-2xl p-5 border border-white/10 hover:bg-white/20 transition-all duration-300 group"
          >
            <div class="flex items-center gap-3 mb-2 text-blue-100">
              <div
                class="w-8 h-8 rounded-full bg-blue-500/20 flex items-center justify-center group-hover:scale-110 transition-transform"
              >
                <i class="fas fa-temperature-high text-blue-300"></i>
              </div>
              <span class="text-sm font-medium">Cao nhất</span>
            </div>
            <p class="text-2xl font-bold text-white ml-1">
              <%= Math.round(weather.main.temp_max) %>°
            </p>
          </div>

          <div
            class="bg-white/10 backdrop-blur-md rounded-2xl p-5 border border-white/10 hover:bg-white/20 transition-all duration-300 group"
          >
            <div class="flex items-center gap-3 mb-2 text-blue-100">
              <div
                class="w-8 h-8 rounded-full bg-cyan-500/20 flex items-center justify-center group-hover:scale-110 transition-transform"
              >
                <i class="fas fa-temperature-low text-cyan-300"></i>
              </div>
              <span class="text-sm font-medium">Thấp nhất</span>
            </div>
            <p class="text-2xl font-bold text-white ml-1">
              <%= Math.round(weather.main.temp_min) %>°
            </p>
          </div>

          <div
            class="bg-white/10 backdrop-blur-md rounded-2xl p-5 border border-white/10 hover:bg-white/20 transition-all duration-300 group"
          >
            <div class="flex items-center gap-3 mb-2 text-blue-100">
              <div
                class="w-8 h-8 rounded-full bg-teal-500/20 flex items-center justify-center group-hover:scale-110 transition-transform"
              >
                <i class="fas fa-tint text-teal-300"></i>
              </div>
              <span class="text-sm font-medium">Độ ẩm</span>
            </div>
            <p class="text-2xl font-bold text-white ml-1">
              <%= weather.main.humidity %>%
            </p>
          </div>

          <div
            class="bg-white/10 backdrop-blur-md rounded-2xl p-5 border border-white/10 hover:bg-white/20 transition-all duration-300 group"
          >
            <div class="flex items-center gap-3 mb-2 text-blue-100">
              <div
                class="w-8 h-8 rounded-full bg-indigo-500/20 flex items-center justify-center group-hover:scale-110 transition-transform"
              >
                <i class="fas fa-wind text-indigo-300"></i>
              </div>
              <span class="text-sm font-medium">Gió</span>
            </div>
            <p class="text-2xl font-bold text-white ml-1">
              <%= Math.round(weather.wind.speed * 3.6) %>
              <span class="text-sm font-normal opacity-70">km/h</span>
            </p>
          </div>
        </div>

        <!-- Secondary Details -->
        <div
          class="bg-black/10 rounded-3xl p-6 md:p-8 backdrop-blur-sm border border-white/5"
        >
          <h3 class="text-xl font-bold text-white mb-6 flex items-center gap-2">
            <i class="fas fa-chart-bar opacity-70"></i>
            Chỉ số chi tiết
          </h3>

          <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            <div class="text-center">
              <p class="text-blue-100 text-sm mb-1">Áp suất</p>
              <p class="text-xl font-bold text-white">
                <%= weather.main.pressure %> hPa
              </p>
            </div>
            <div class="text-center border-l border-white/10">
              <p class="text-blue-100 text-sm mb-1">Tầm nhìn</p>
              <p class="text-xl font-bold text-white">
                <%= (weather.visibility / 1000).toFixed(1) %> km
              </p>
            </div>
            <div class="text-center border-l border-white/10">
              <p class="text-blue-100 text-sm mb-1">Mây</p>
              <p class="text-xl font-bold text-white">
                <%= weather.clouds.all %>%
              </p>
            </div>
            <div class="text-center border-l border-white/10">
              <p class="text-blue-100 text-sm mb-1">Hướng gió</p>
              <p class="text-xl font-bold text-white">
                <%= weather.wind.deg %>°
              </p>
            </div>
          </div>
        </div>

        <!-- Sun Times -->
        <div class="mt-6 flex flex-col md:flex-row gap-4">
          <div
            class="flex-1 bg-gradient-to-r from-yellow-500/20 to-orange-500/20 rounded-2xl p-4 flex items-center justify-between border border-yellow-500/20"
          >
            <div class="flex items-center gap-3">
              <i class="fas fa-sun text-3xl text-yellow-300"></i>
              <span class="text-white/90">Mặt trời mọc</span>
            </div>
            <span class="text-xl font-bold text-white">
              <%
                const sunriseTime = new Date((weather.sys.sunrise + weather.timezone) * 1000);
                const sunriseHours = String(sunriseTime.getUTCHours()).padStart(2, '0');
                const sunriseMinutes = String(sunriseTime.getUTCMinutes()).padStart(2, '0');
              %>
              <%= sunriseHours %>:<%= sunriseMinutes %>
            </span>
          </div>
          <div
            class="flex-1 bg-gradient-to-r from-orange-500/20 to-pink-500/20 rounded-2xl p-4 flex items-center justify-between border border-pink-500/20"
          >
            <div class="flex items-center gap-3">
              <i class="fas fa-moon text-3xl text-pink-300"></i>
              <span class="text-white/90">Mặt trời lặn</span>
            </div>
            <span class="text-xl font-bold text-white">
              <%
                const sunsetTime = new Date((weather.sys.sunset + weather.timezone) * 1000);
                const sunsetHours = String(sunsetTime.getUTCHours()).padStart(2, '0');
                const sunsetMinutes = String(sunsetTime.getUTCMinutes()).padStart(2, '0');
              %>
              <%= sunsetHours %>:<%= sunsetMinutes %>
            </span>
          </div>
        </div>

        <!-- Hourly Forecast -->
        <div class="mt-8 bg-black/10 rounded-3xl p-6 md:p-8 backdrop-blur-sm border border-white/5">
          <h3 class="text-xl font-bold text-white mb-6 flex items-center gap-2">
            <i class="fas fa-clock opacity-70"></i>
            Dự báo theo giờ
          </h3>
          
          <!-- Hourly Cards -->
          <div class="flex gap-3 overflow-x-auto pb-4 scrollbar-thin scrollbar-thumb-white/20 scrollbar-track-transparent">
            <% hourlyForecasts.forEach((forecast, index) => { 
              const forecastTime = new Date((forecast.dt + weather.timezone) * 1000);
              const forecastHour = String(forecastTime.getUTCHours()).padStart(2, '0');
              const forecastMinute = String(forecastTime.getUTCMinutes()).padStart(2, '0');
            %>
            <div class="flex-shrink-0 w-24 bg-white/10 backdrop-blur-md rounded-2xl p-4 border border-white/10 hover:bg-white/20 transition-all duration-300 text-center">
              <p class="text-sm text-blue-100 mb-2 font-medium">
                <%= index === 0 ? 'Bây giờ' : forecastHour + ':' + forecastMinute %>
              </p>
              <img 
                src="http://openweathermap.org/img/wn/<%= forecast.icon %>@2x.png" 
                alt="<%= forecast.description %>"
                class="w-12 h-12 mx-auto"
              />
              <p class="text-xl font-bold text-white"><%= forecast.temp %>°</p>
              <div class="mt-2 text-xs text-blue-100 space-y-1">
                <p><i class="fas fa-tint mr-1"></i><%= forecast.humidity %>%</p>
              </div>
            </div>
            <% }); %>
          </div>

          <!-- Temperature Chart -->
          <div class="mt-6">
            <h4 class="text-sm font-medium text-blue-100 mb-4 flex items-center gap-2">
              <i class="fas fa-chart-line"></i>
              Biểu đồ nhiệt độ 24h
            </h4>
            <div class="relative h-40 bg-white/5 rounded-2xl p-4 border border-white/10">
              <canvas id="tempChart"></canvas>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="mt-10 flex flex-wrap gap-4 justify-center">
          <a
            href="/forecast?city=<%= weather.name %>"
            class="px-8 py-4 bg-white text-primary font-bold rounded-2xl shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300 flex items-center gap-2"
          >
            <i class="fas fa-calendar-week"></i>
            Xem dự báo 5 ngày
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Real-time clock update
  const timezone = <%= weather.timezone %>;
  function updateLocalTime() {
    const now = new Date();
    const localTime = new Date((now.getTime() / 1000 + timezone) * 1000);
    const hours = String(localTime.getUTCHours()).padStart(2, '0');
    const minutes = String(localTime.getUTCMinutes()).padStart(2, '0');
    const seconds = String(localTime.getUTCSeconds()).padStart(2, '0');
    document.getElementById('localTime').textContent = `${hours}:${minutes}:${seconds}`;
  }
  setInterval(updateLocalTime, 1000);

  // Temperature Chart
  const hourlyData = <%- JSON.stringify(hourlyForecasts) %>;
  const labels = hourlyData.map((item, index) => {
    if (index === 0) return 'Bây giờ';
    const time = new Date((item.dt + timezone) * 1000);
    return String(time.getUTCHours()).padStart(2, '0') + ':00';
  });
  const temps = hourlyData.map(item => item.temp);

  const ctx = document.getElementById('tempChart').getContext('2d');
  const gradient = ctx.createLinearGradient(0, 0, 0, 150);
  gradient.addColorStop(0, 'rgba(56, 189, 248, 0.5)');
  gradient.addColorStop(1, 'rgba(56, 189, 248, 0.0)');

  new Chart(ctx, {
    type: 'line',
    data: {
      labels: labels,
      datasets: [{
        label: 'Nhiệt độ (°C)',
        data: temps,
        borderColor: 'rgba(56, 189, 248, 1)',
        backgroundColor: gradient,
        borderWidth: 3,
        fill: true,
        tension: 0.4,
        pointBackgroundColor: 'rgba(255, 255, 255, 1)',
        pointBorderColor: 'rgba(56, 189, 248, 1)',
        pointBorderWidth: 2,
        pointRadius: 5,
        pointHoverRadius: 7
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          display: false
        },
        tooltip: {
          backgroundColor: 'rgba(15, 23, 42, 0.9)',
          titleColor: '#fff',
          bodyColor: '#fff',
          borderColor: 'rgba(56, 189, 248, 0.5)',
          borderWidth: 1,
          padding: 12,
          displayColors: false,
          callbacks: {
            label: function(context) {
              return context.parsed.y + '°C';
            }
          }
        }
      },
      scales: {
        x: {
          grid: {
            color: 'rgba(255, 255, 255, 0.1)',
            drawBorder: false
          },
          ticks: {
            color: 'rgba(255, 255, 255, 0.7)',
            font: {
              size: 11
            }
          }
        },
        y: {
          grid: {
            color: 'rgba(255, 255, 255, 0.1)',
            drawBorder: false
          },
          ticks: {
            color: 'rgba(255, 255, 255, 0.7)',
            font: {
              size: 11
            },
            callback: function(value) {
              return value + '°';
            }
          }
        }
      }
    }
  });
</script>

<%- include('partials/footer') %>
